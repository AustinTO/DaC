<!-- /var/ossec/etc/rules/fail2ban.xml -->
<group name="fail2ban,authentication,">
  <rule id="199900" level="10">
    <decoded_as>fail2ban_actions_child</decoded_as>
    <description>Fail2Ban: $(status) $(srcip) on $(service)</description>
    <options>no_full_log</options>
  </rule>

  <rule id="199901" level="8">
    <decoded_as>fail2ban_observer_child</decoded_as>
    <description>Fail2Ban: bantime increased for $(srcip) on $(service) to $(bantime)</description>
    <options>no_full_log</options>
  </rule>

  <rule id="199902" level="5">
    <decoded_as>fail2ban_server_exited</decoded_as>
    <description>Fail2Ban service stopped</description>
    <options>no_full_log</options>
  </rule>

  <rule id="199903" level="5">
    <decoded_as>fail2ban_server_started</decoded_as>
    <description>Fail2Ban service started</description>
    <options>no_full_log</options>
  </rule>
</group>
