<group name="fail2ban,authentication,">

  <!-- Ban / Unban -->
  <rule id="199950" level="10">
    <decoded_as>f2b-actions-child</decoded_as>
    <description>Fail2Ban: $(status) $(srcip) on $(service)</description>
    <options>no_full_log</options>
  </rule>

  <!-- Found hits (lower level, useful to see probing) -->
  <rule id="199951" level="3">
    <decoded_as>f2b-filter-child</decoded_as>
    <description>Fail2Ban: Found $(srcip) on $(service) at $(event_time)</description>
    <options>no_full_log</options>
  </rule>

  <!-- Service started -->
  <rule id="199952" level="4">
    <decoded_as>f2b-server-start-child</decoded_as>
    <description>Fail2Ban: service started (v$(version))</description>
    <options>no_full_log</options>
  </rule>

  <!-- Service stopped -->
  <rule id="199953" level="4">
    <decoded_as>f2b-server-stop-child</decoded_as>
    <description>Fail2Ban: service stopped</description>
    <options>no_full_log</options>
  </rule>

</group>
