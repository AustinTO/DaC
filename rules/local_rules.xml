<!-- Example -->
<group name="local,syslog,sshd,">

  <!--
  Dec 10 01:02:02 host sshd[1234]: Failed none for root from 1.1.1.1 port 1066 ssh2
  -->
  <rule id="100001" level="5">
    <if_sid>5716</if_sid>
    <srcip>1.1.1.1</srcip>
    <description>sshd: authentication failed from IP 1.1.1.1.</description>
    <group>authentication_failed,pci_dss_10.2.4,pci_dss_10.2.5,</group>
  </rule>

</group>

<group name="sysmon,windows,local,">
  <!-- Silence cleanmgr temp DLL writes that are legit Disk Cleanup -->
  <rule id="100205" level="0">
    <!-- Narrow to the detection rule that is firing in your alerts -->
    <if_sid>92213</if_sid>
    <!-- Match cleanmgr.exe as the writer -->
    <field name="data.win.eventdata.image">(?i)\\cleanmgr\.exe$</field>
    <!-- Match DLLs in user Temp only -->
    <field name="data.win.eventdata.targetFilename">(?i)\\AppData\\Local\\Temp\\.*\.dll$</field>
    <description>Exclude benign cleanmgr temp DLL creation</description>
    <options>no_full_log</options>
  </rule>
</group>
